{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs", 
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/server.ts", "src/redis.js"],
  "exclude": ["node_modules"]
}
